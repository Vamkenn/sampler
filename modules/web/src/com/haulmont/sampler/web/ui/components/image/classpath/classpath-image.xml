<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.components.image.classpath.ClassPathImageFrame">
    <layout>
        <hbox spacing="true">
            <groupBox caption="Image with a programmatically defined source"
                      height="250px"
                      width="320px">
                <image id="programmaticImage"
                       align="MIDDLE_CENTER"
                       scaleMode="SCALE_DOWN"
                       width="100%"/>
            </groupBox>
            <groupBox caption="Image with a declaratively defined source"
                      height="250px"
                      width="320px">
                <image id="declarativeImage"
                       align="MIDDLE_CENTER">
                    <classpath path="/com/haulmont/sampler/web/ui/components/image/classpath/cuba-logo.png"/>
                </image>
            </groupBox>
        </hbox>
    </layout>
</window>
