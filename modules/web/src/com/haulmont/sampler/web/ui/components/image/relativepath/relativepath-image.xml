<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <layout>
        <hbox spacing="true">
            <groupBox caption="Image with a programmatically defined source"
                      height="250px"
                      width="320px">
                <image id="programmaticImage"
                       align="MIDDLE_CENTER"
                       scaleMode="SCALE_DOWN"
                       width="100%"/>
            </groupBox>
            <groupBox caption="Image with a declaratively defined source"
                      height="250px"
                      width="320px">
                <image id="declarativeImage"
                       align="MIDDLE_CENTER">
                    <relativePath path="VAADIN/themes/halo/images/cuba-logo.png"/>
                </image>
            </groupBox>
        </hbox>
    </layout>
</window>
