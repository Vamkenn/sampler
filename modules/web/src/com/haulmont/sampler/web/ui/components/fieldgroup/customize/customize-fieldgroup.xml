<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.components.fieldgroup.customize.CustomizeFieldGroupSample">
    <dsContext>
        <datasource id="orderDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Order"
                    view="order-with-customer"/>
    </dsContext>
    <layout>
        <fieldGroup id="orderFieldGroup"
                    datasource="orderDs">
            <field property="date"/>
            <field property="customer"/>
            <field property="amount"/>
        </fieldGroup>
    </layout>
</window>
