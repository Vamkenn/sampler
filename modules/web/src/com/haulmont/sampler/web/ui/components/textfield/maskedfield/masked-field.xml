<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <layout spacing="true">
        <hbox spacing="true">
            <maskedField id="phoneFieldMasked"
                         caption="valueMode='masked'"
                         mask="(###) ###-##-##"
                         valueMode="masked"/>
            <button id="showMasked"
                    align="BOTTOM_LEFT"
                    caption="Show value"/>
        </hbox>
        <hbox spacing="true">
            <maskedField id="phoneFieldClear"
                         caption="valueMode='clear'"
                         mask="(###) ###-##-##"
                         valueMode="clear"/>
            <button id="showClear"
                    align="BOTTOM_LEFT"
                    caption="Show value"/>
        </hbox>
    </layout>
</window>
