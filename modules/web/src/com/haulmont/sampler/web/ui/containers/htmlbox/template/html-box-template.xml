<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.containers.htmlbox.template.HtmlBoxTemplateFrame">
    <layout spacing="true">
        <hbox spacing="true"
              width="100%">
            <groupBox caption="HtmlBox with declaratively defined templateContents">
                <htmlBox height="275px">
                    <templateContents>
                        <![CDATA[
                        <table align="center" cellspacing="10"
                               style="width: 100%; height: 100%; color: #fff; padding: 20px; background: #31629E repeat-x">
                            <tr>
                                <td colspan="2"><h1 style="margin-top: 0;">Login</h1>
                                <td>
                            </tr>
                            <tr>
                                <td align="right">User&nbsp;name:</td>
                                <td> <div location="username"></div> </td>
                            </tr>
                            <tr>
                                <td align="right">Password:</td>
                                <td> <div location="password"></div> </td>
                            </tr>
                            <tr>
                                <td align="right" colspan="2"> <div location="okbutton" style="padding: 10px;"></div> </td>
                            </tr>
                            <tr>
                                <td colspan="2" style="padding: 7px; background-color: #4172AE">
                                <span style="font-family: FontAwesome; margin-right: 5px;">&#xf05a;</span> This information is in the layout.
                                <td>
                            </tr>
                        </table>
                    ]]>
                    </templateContents>
                    <textField id="username"
                               width="100%"/>
                    <textField id="password"
                               width="100%"/>
                    <button id="okbutton"
                            caption="Login"
                            invoke="click"/>
                </htmlBox>
            </groupBox>
            <groupBox caption="HtmlBox with programmatically defined templateContents">
                <htmlBox id="htmlSample"
                         height="275px"
                         stylename="html-sample">
                    <button id="addons"
                            caption="Addons"
                            invoke="click"
                            width="100%"/>
                    <button id="buy"
                            caption="Buy"
                            invoke="click"
                            width="100%"/>
                    <button id="support"
                            caption="Support"
                            invoke="click"
                            width="100%"/>
                </htmlBox>
            </groupBox>
        </hbox>
    </layout>
</window>
