<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.cuba.gui.components.AbstractFrame"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <dsContext>
        <collectionDatasource id="dateValueDs"
                              class="com.haulmont.sampler.entity.DateValue"
                              view="_local"
                              maxResults="20">
            <query>
                <![CDATA[select e from sampler$DateValue e order by e.date]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <chart:serialChart id="lineChart"
                           autoMarginOffset="20"
                           categoryField="date"
                           datasource="dateValueDs"
                           height="100%"
                           marginRight="40"
                           marginLeft="40"
                           mouseWheelZoomEnabled="true"
                           width="100%">
            <chart:valueAxes>
                <chart:axis id="v1"
                            axisAlpha="1"
                            centerLabels="true"
                            ignoreAxisWidth="true"
                            position="LEFT"/>
            </chart:valueAxes>
            <chart:balloon borderThickness="1"
                           shadowAlpha="0"/>
            <chart:graphs>
                <chart:graph id="g1"
                             bullet="ROUND"
                             bulletSize="8"
                             type="SMOOTHED_LINE"
                             bulletBorderAlpha="1"
                             lineColor="#e63a3a"
                             lineThickness="2"
                             valueField="value"
                             balloonText="&lt;span style='font-size:18px;'&gt;[[value]]&lt;/span&gt;">
                    <chart:balloon color="#e63a3a"/>
                    <chart:fillColors>
                        <chart:color value="#e63a3a"/>
                    </chart:fillColors>
                </chart:graph>
            </chart:graphs>
            <chart:categoryAxis dashLength="1"
                                gridAlpha="0.2"
                                centerLabels="true"
                                minorGridEnabled="true"/>
            <chart:chartCursor cursorAlpha="1"
                               cursorColor="#e63a3a"
                               cursorPosition="MOUSE"
                               limitToGraph="g1"
                               pan="true"
                               valueLineAlpha="0.2"
                               valueLineEnabled="true"
                               valueLineBalloonEnabled="true"
                               valueZoomable="true"/>
            <chart:export/>
        </chart:serialChart>
    </layout>
</window>
