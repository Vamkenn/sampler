<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.components.contexthelp.fieldgroup.ContextHelpFieldGroupSample"
        messagesPack="com.haulmont.sampler.web.ui.components.contexthelp.fieldgroup">
    <dsContext>
        <datasource id="customerDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Customer"
                    view="_local"/>
    </dsContext>
    <layout spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column>
                <field property="name"
                       description="Description"
                       contextHelpText="msg://contextHelpText.content"
                       requiredMessage="Required message!"/>
                <field property="age"/>
                <field property="active"
                       contextHelpText="msg://contextHelpText.htmlContent"
                       contextHelpTextHtmlEnabled="true"/>
            </column>
        </fieldGroup>
    </layout>
</window>