<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <data>
        <instance id="customerDc"
                  class="com.haulmont.sampler.entity.Customer"
                  view="_local"/>
    </data>
    <layout>
        <hbox spacing="true">
            <groupBox caption="Caption on TOP">
                <form captionPosition="TOP"
                      dataContainer="customerDc">
                    <textField property="name"/>
                    <textField property="lastName"/>
                </form>
            </groupBox>
            <groupBox caption="Caption on LEFT">
                <form captionPosition="LEFT"
                      dataContainer="customerDc">
                    <textField property="name"/>
                    <textField property="lastName"/>
                    <textField property="age"/>
                    <lookupField property="grade"/>
                </form>
            </groupBox>
        </hbox>
    </layout>
</window>
