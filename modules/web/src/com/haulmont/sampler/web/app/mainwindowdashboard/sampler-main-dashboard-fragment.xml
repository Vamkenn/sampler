<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        messagesPack="com.haulmont.sampler.web.app.mainwindowdashboard">
    <layout expand="dashboardScrollBox"
            margin="true"
            responsive="true"
            spacing="true">
        <hbox id="header"
              expand="spacer"
              visible="false"
              width="100%">
            <hbox id="historyBox"
                  height="30px"/>
            <label id="spacer"/>
            <popupView id="permalink"
                       align="TOP_RIGHT"
                       description="msg://dashboard.permalink.description"
                       hideOnMouseOut="false"
                       stylename="external-link"
                       width="30px">
                <textField id="popupContent"
                           editable="false"/>
            </popupView>
        </hbox>
        <scrollBox id="dashboardScrollBox">
            <cssLayout id="cssLayout"
                       responsive="true"
                       stylename="main-dashboard-csslayout-responsive"
                       width="100%"/>
        </scrollBox>
    </layout>
</window>
